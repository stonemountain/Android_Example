<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="cn.smvp.sdk.demo.PlayVideoActivity">

    <cn.smvp.android.sdk.view.SmvpVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/display_progress"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:layout_below="@id/video_view"
        android:text="progress" />

    <fragment
        android:id="@+id/title_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_progress"
        android:name="cn.smvp.sdk.demo.fragment.TitleFragment" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_fragment" />

</RelativeLayout>
