<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/upload_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_below="@id/upload_title" />

    <Button
        android:id="@+id/upload_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_progressbar"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:text="@string/upload_retry" />

    <TextView
        android:id="@+id/upload_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_progressbar"
        android:layout_toRightOf="@id/upload_retry"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/progress"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@id/upload_retry" />

    <TextView
        android:id="@+id/upload_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_progressbar"
        android:layout_toRightOf="@id/upload_progress"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/status"
        android:layout_alignBottom="@id/upload_progress" />

    <Button
        android:id="@+id/upload_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_progressbar"
        android:layout_toRightOf="@id/upload_status"
        android:layout_margin="5dp"
        android:text="@string/cancel" />

</RelativeLayout>